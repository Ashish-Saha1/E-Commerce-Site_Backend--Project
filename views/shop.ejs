        <section class="pagination">
            <button class="button-style pagination-btn"><i class="fas fa-less-than"></i></button>
            <button class="button-style pagination-btn">2</button>
            <button class="button-style pagination-btn">3</button>
            <button class="button-style pagination-btn">4</button>
            <button class="button-style pagination-btn">5</button>
            <button class="button-style pagination-btn">6</button>
            <button class="button-style pagination-btn">7</button>
            <button class="button-style pagination-btn">8</button>
