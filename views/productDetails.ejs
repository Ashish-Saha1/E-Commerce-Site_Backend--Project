
<div class="container">
    
    <div class="pic-container">
        <a href=""><img src="/uploads/<%= product.avater %>" alt="Sunglass Image"></a>
    </div>


    <div class="details-container">
        <h1><%= product.productName %></h1>

        <div class="product-details">
            <div class="vendor-product product-style">
                <label for="">Brand :</label>
                <span> <%= product.brand %> </span>
            </div>

            <div class="stock-product product-style">
                <label for="">Availability :</label>
                <span><%= product.stock > 0 ? "In Stock" : "Out of Stock" %></span>
            </div>
        </div>

        <div class="product-price-div">
            <span>Taka</span>
            <h3 class="product-price"> <%= product.price %> </h3>
        </div>

        <div class="delivery-note">
            <span>* PLEASE CHECK THE PRODUCT INFRONT OF DELIVERY MAN</span>
            <span>* Offer is only valid at batabd.com</span>
            
        </div>

        <strong>
            <span>FREE SHIPING</span>
        </strong>

        <div class="promocode">
            <label for="promocode">Promocode</label>
            <input type="text" name="Promocode" id="">
        </div>

        <div class="quanty">
            <label for="quanty">Quanty</label>
                    <div class="quanty-group">
                            <a href="" class="plus">+</a>
                            <input class="inputQty" type="text" name="quanty" id="" value="1">
                            <a href="" class="minus">-</a>
                    </div>
        </div>

        <div class="subtotal">
            <label>Subtotal : TK </label>
            <span class="totalPrice"> <%= product.price %> </span>
        </div>


        <!-- <div class="add-cart">
            <input class="add-cart-btn" type="button" value="ADD TO CART">
        </div> -->

         <form action="/users/cart/" class="add-cart" method="post">
            <input class="add-cart-btn" type="submit" value="ADD TO CART">
        </form>

    </div>

</div>

 <div class="product-description">
        <div class="product-details">
            <h2>PRODUCT DETAILS</h2>
            <p><%= product.productDetail %></p>
        </div>

        <div class="product-features">
            <h2>Features</h2>
            <ul>
                <li>-Type: <span> <%= product.type %> </span></li>
                <li>-Material: <span> <%= product.material %> </span></li>
                <li>-Color: <span> <%= product.color %> </span></li>
        
            </ul>
        </div>
    </div>
