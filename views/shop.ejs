
    <% if (userData) { %>
     <p><%= userData.firstName %></p>
    <% }else{ %>
        <p> No UserData found</p>
    <% } %>
     

<main>
    <div class="main-container">
        <section class="sort-search">
            <div class="sort-product">
                <label for="sort">Sort By: </label>
                <select name="sort" id="sort">
                    <option value="sold">Most Sold First</option>
                    <option value="rating">Most Rated</option>
                    <option value="low price">Most Cheapest</option>
                    <option value="arrival">New Arrival</option>
                    <option value="discount">Top Discount</option>
                </select>
            </div>

            <div class="search-product">
                <input type="search" name="search-producct" id="" placeholder="Search Product">
                <a href=""><i class="fa-solid fa-search"></i></a>
            </div>

        </section>

        <section class="filter-sidebar">
                <div class="category">
                    <h1>Categories</h1>
                <ul>
                    <li><label for="phone"><input type="checkbox" name="phone" id=""> Phone</label></li>
                    <li><label for="tablets"><input type="checkbox" name="tablets" id=""> Tablet</label></li>
                    <li><label for="telivisions"><input type="checkbox" name="telivisions" id=""> Telivision</label></li>
                    <li><label for="conputer"><input type="checkbox" name="conputer" id=""> Computer</label></li>
                    <li><label for="headphones"><input type="checkbox" name="headphones" id=""> Headphone</label></li>
                </ul>
                </div>

                <div class="category">
                    <h1>Price Range</h1>
                <ul>
                    <li><label for="price-1"><input type="radio" name="price" id="" value="[0,20]"> $0-$20</label></li>
                    <li><label for="price-2"><input type="radio" name="price" id="" value="[21,50]"> $21-$50</label></li>
                    <li><label for="price-3"><input type="radio" name="price" id="" value="[51-100]"> $51-$100</label></li>
                    <li><label for="price-4"><input type="radio" name="price" id="" value="[101-500]">  $101-$500</label></li>
                    <li><label for="price-5"><input type="radio" name="price" id="" value="[501+]"> $501+</label></li>
                </ul>
                </div>

                <div class="category">
                    <h1>Shipping Options</h1>
                <ul>
                    <li><label for="free"><input type="radio" name="shipping" id="" value="free"> Free</label></li>
                    <li><label for="paid"><input type="radio" name="shipping" id="" value="paid"> Paid</label></li>
                </ul>
                </div>
       
        </section>

        <section class="products">
                <% products.forEach(element => { %>
                        <div class="product">
                            <article class="product-stock">
                                <span>5 In Stock</span>
                                <hr>
                                <span>3 Sold</span>
                            </article>

                            <div class="product-image">
                                <img src="/uploads/<%= element.avater %>" alt="Headphone image">
                            </div>

                            <div class="product-details">
                                <h3><%= element.productName %></h3>
                                
                                <p class="shop-product-details"><%= element.productDetail %>...<a href="/products/productdetails">Learn More</a>  </p>
                                
                                <h4><%= element.price %></h4>

                                <h5>Rating: 4.5/5</h5>

                                <button class="btn">Add To Cart</button>
                            </div>
                        </div>
                <% }) %>

                
                


